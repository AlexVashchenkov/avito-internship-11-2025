FROM golang:1.25-alpine AS builder

RUN apk add --no-cache git make

WORKDIR /app

COPY go.mod go.sum ./
RUN go mod download

COPY . .

RUN CGO_ENABLED=0 GOOS=linux go build -o server ./cmd/main.go

FROM alpine:3.22.2

WORKDIR /app

COPY --from=builder /app/server .

COPY .env .env

EXPOSE 8080

CMD ["./server"]